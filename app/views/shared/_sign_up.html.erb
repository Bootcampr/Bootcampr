<h2>Sign up</h2>

<%= form_for(@user) do |f| %>

  <div>
    <%= f.email_field :email, autofocus: true, placeholder: 'Email', class: 'form-input' %>
  </div>

  <div>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, placeholder: 'Password', autocomplete: "off", class: 'form-input' %>
  </div>

  <div>
    <%= f.password_field :password_confirmation, placeholder: 'Password Confirmation', autocomplete: "off", class: 'form-input' %>
  </div>

  <div>
    <%= f.submit "Sign up", class: 'form-button' %>
  </div>
<% end %>
