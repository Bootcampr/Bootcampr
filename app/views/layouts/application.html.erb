<!DOCTYPE html>
<html>
  <head>
    <title>Bootcampr</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= stylesheet_link_tag    'landing-page', media: 'all' if controller_name == 'pages' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body class='welcome'>
    <div class="header-container">
      <%= render 'shared/header' %>
    </div>
    <div class="hero-section">
      <div class="hero-section-text">
        <h1>Made by Bootcamprs For Bootcamprs</h1>
        <p>To create beautiful and meaningful things</p>
      </div>
    </div>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <div class="content-container">
      <%= yield %>
    </div>
  </body>
  </html>
