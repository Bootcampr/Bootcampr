<h2 class='user-profile-name user-profile'><%= @user.full_name %>'s Profile</h2>

<div class="profile-picture-container">
  <%= image_tag @user.image.thumb('400x200#').url if @user.image_stored? %>
</div>

<div class='user-profile-bootcamp user-profile'>
  <p>Bootcamp: <%= @user.bootcamp %></p>
</div>
<div class='user-profile-location user-profile'>
  <p>Location: <%= @user.location %></p>
</div>
<div class='user-profile-summary user-profile'>
  <p>Summary: <%= @user.summary %></p>
</div>
<div class='user-profile-projects user-profile'>
    <% @user.projects.each do |project| %>
    <p><%= link_to "#{project.title}", project_path(project) %></p>
    <% end %>
</div>

<div class='user-project-links user-profile'>
  <span class='user-link user-profile'><%= link_to image_tag('github.png', width: 50), "https://github.com/#{@user.github}" %></span>
  <span class='user-link user-profile'><%= link_to image_tag('twitter.png', width: 50), "https://twitter.com/#{@user.twitter}" %></span>
  <span class='user-link user-profile'><%= link_to image_tag('linkedin.png', width: 50), "https://linkedin.com/in/#{@user.linkedin}" %></span>
  <span class='user-link user-profile'><%= link_to image_tag('website.jpg', width: 50), @user.website %></span>
</div>

<div class='user-profile-tags user-profile'>
  <p>Interests:</p>
  <p class="user-details">
    <%= safe_join(@user.tag_list.map { |tag| link_to(tag, tag_path(Tag.find_by(name: tag))) }, ", ".html_safe) %>
  </p>
</div>

<% if @user == current_user %>
  <%= link_to "Edit Profile", edit_user_path(current_user) %>
<% end %>
