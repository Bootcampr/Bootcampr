<div class='page-title'><h2>Projects</h2>

<% if user_signed_in? %>
  <%= link_to 'Add a project', new_project_path %>
<% end %>


<% @projects.each do |project| %>
  <div class='project'>
    <div class='project-title'><h3><%= link_to project.title, project %><h3></div>
    <div class='project-summary'><%= project.summary %></div>
  </div>
<% end %>
