<div>
  <% @event.errors.full_messages.each do |msg| %>
    <%= msg %>
  <% end %>

  <%= form_for @event do |f| %>
    Title: <%= f.text_field :title %><br>
    Date: <%= f.date_field :date %><br>
    Time: <%= f.time_field :time %><br>
    Location: <%= f.text_field :location %><br>
    Summary: <%= f.text_field :summary %><br>
    Categories: <%= f.text_field :tag_list, value: '' %><br />
    <% if params[:project_id] %>
      <%= f.hidden_field :project_id, value: params[:project_id] %>
    <% end %>
    <%= f.submit %><br>
  <% end %>
</div>
