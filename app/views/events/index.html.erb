<h2>Events</h2>
<br>
<% if user_signed_in? %>
<%= link_to 'Add a New Event', new_event_path %>
<% end %>

<div class='cards'>
  <% @events.each do |event| %>
  <div class='card'>
    <div class="card-image">
      <%= image_tag("bricks") %>
    </div>
    <div class='card-header'>
      <%= link_to event.title, event %>
    </div>
    <div class='card-copy'>
      <p>
        <%= event.summary %>
      </p>
    </div>
  </div>
  <% end %>
</div>
